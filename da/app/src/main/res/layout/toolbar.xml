<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#48D1CC"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:id="@+id/quaylai"
            android:layout_centerVertical="true"
            android:background="@drawable/baseline_arrow_back_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang chá»§"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/semibold"
            android:id="@+id/tvChuDe"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="330dp"
            android:focusable="true"
            android:clipToPadding="false">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_shopping_cart_24"
                android:background="@drawable/baseline_shopping_cart_24"
                android:layout_gravity="center"
                android:id="@+id/btnCTGioHang"
                />
            <TextView
                android:id="@+id/cart_badge_textview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="4"
                android:textColor="#fff"
                android:background="@drawable/badge_shape"
                android:layout_gravity="top|end"
                android:layout_marginEnd="-2dp"
                android:layout_marginTop="-2dp"
                android:gravity="center"
                style="@style/TextAppearance.MaterialComponents.Caption"
                />
        </FrameLayout>
    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>