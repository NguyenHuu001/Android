<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".list_item_cart">
    <ImageView
        android:id="@+id/img_product"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/anhcuoi1"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_product"
        />

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Product Price"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/tv_product_name"
        android:layout_toRightOf="@+id/img_product"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSoLuong"
        android:layout_below="@id/tv_product_price"
        android:layout_toRightOf="@+id/img_product"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="1"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dautru"
        android:id="@+id/giamSoLuong"
        android:layout_toLeftOf="@+id/txtSoLuong"
        android:layout_below="@id/tv_product_price"
        android:background="@drawable/dautru"
        android:layout_marginRight="-60dp"
        android:layout_marginTop="30dp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dautru"
        android:id="@+id/tangSoLuong"
        android:layout_toLeftOf="@+id/txtSoLuong"
        android:layout_below="@id/tv_product_price"
        android:background="@drawable/baseline_add_24"
        android:layout_marginRight="-120dp"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/giaTungLoai"
        android:layout_toRightOf="@+id/tv_product_price"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textColor="#ff0000"
        android:textSize="25sp"
        android:text="12000 VND"
        />

</RelativeLayout>