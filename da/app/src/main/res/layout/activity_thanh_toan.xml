<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThanhToan">


<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/img"
            android:background="@color/white"
            android:scaleType="fitCenter"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tóm tắt yêu cầu"
            android:textSize="30dp"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            />

        <View
            android:id="@+id/view_ngang"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/btn_back"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:id="@+id/re_diachi"
            >

            <ImageButton
                android:id="@+id/img_diachi"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/img_diachi"
                android:scaleType="fitCenter"
                android:background="@color/white"
                />

            <Button
                android:id="@+id/btn_diachi"
                android:layout_toRightOf="@id/img_diachi"
                android:layout_width="330dp"
                android:layout_height="90dp"
                android:text="Hữu \t\t\t\n(+84)03********687\n18 Nguyễn Sáng\nTây Thạnh, Tân Phú, TP.HCM,.."
                android:gravity="left"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/white"
                android:textSize="40px"
                style="?android:attr/borderlessButtonStyle"
                />
            <ImageButton
                android:id="@+id/icon_phai"
                android:layout_toRightOf="@+id/btn_diachi"
                android:layout_below="@id/view_ngang"
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:src="@drawable/icon_phai"
                android:scaleType="fitCenter"
                tools:ignore="NotSibling"
                android:background="@color/white"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Name_Store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/re_diachi">

            <ImageView
                android:id="@+id/avatar_shop"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avata_shop"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/avatar_shop"
                android:layout_marginLeft="10dp"
                android:text="Store Hữu"
                android:textSize="50px"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="40px"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/san_pham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Name_Store">

            <ImageView
                android:id="@+id/anh_mau"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/anhcuoi1"

                />

            <TextView
                android:id="@+id/ten_vay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh_mau"
                android:layout_marginLeft="30px"
                android:layout_marginTop="5dp"
                android:text="Tên Váy"
                android:textSize="50px"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            
            <TextView
                android:id="@+id/gia_vay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh_mau"
                android:layout_below="@+id/ten_vay"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="30px"
                android:text="Giá"
                android:textSize="50px"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            
                <ImageButton
                    android:id="@+id/img_tru"
                    android:layout_width="200px"
                    android:layout_height="100px"
                    android:layout_toRightOf="@+id/gia_vay"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/img_tru"
                    android:scaleType="fitCenter"
                    android:background="@color/white"/>

            <TextView
                android:id="@+id/txtamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_tru"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="4dp"
                android:text="1"
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                />

            <ImageButton
                android:id="@+id/img_cong"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/img_cong"
                android:layout_toRightOf="@+id/img_tru"
                android:layout_marginTop="118dp"
                android:layout_marginLeft="40dp"
                android:scaleType="fitCenter"
                android:background="@color/white"
                />
            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/goi_cuoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/san_pham"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/txt_vctc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vận chuyển tiêu chuẩn"
                android:textSize="50px"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/txt_timeShip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_vctc"
                android:text="Giao hàng trước Apr 20 - Apr 22"
                android:layout_marginLeft="8dp"/>
            
            <TextView
                android:id="@+id/txtPriceGH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_vctc"
                android:layout_marginLeft="140dp"
                android:text="40.000đ"/>

            <TextView
                android:id="@+id/txt_tongcong1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_timeShip"
                android:text="Tổng cộng: "
                android:textColor="@color/black"
                android:layout_marginLeft="230dp"/>

            <TextView
                android:id="@+id/tongcong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_tongcong1"
                android:layout_marginLeft="0dp"
                android:text="tổng số tiền"
                android:layout_marginTop="45dp"
                android:textSize="40px"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Relative_thanhtoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goi_cuoc"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/phuong_thuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="50px"/>

            <Spinner
                android:id="@+id/my_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/phuong_thuc"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="2dp"

                />

        </RelativeLayout>
        <View
            android:id="@+id/view_ngang2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/Relative_thanhtoan"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            tools:ignore="DuplicateIds" />

        <Button
            android:id="@+id/btn_thanhtoan"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_below="@id/view_ngang2"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:text="Thanh toán"
            android:backgroundTint="@color/red"/>



    </RelativeLayout>


</ScrollView>





</RelativeLayout>